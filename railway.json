{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": [
            "cd client && npm install",
            "pip install --upgrade pip",
            "pip install -r requirements.txt"
          ]
        },
        "build": {
          "cmds": [
            "cd client && npm run build"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python3 server/api/api.py"
  }
}